# Kahaniyaa Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (Required for Story Service)
OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech Services (Required for TTS Service)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Azure Computer Vision (Required for Vision Service)
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/

# JWT Configuration (Required for Auth Service)
JWT_SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration (Default for Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/kahaniyaa
REDIS_URL=redis://redis:6379/0

# Service URLs (Default for Docker Compose)
AUTH_SERVICE_URL=http://auth-service:8001
STORY_SERVICE_URL=http://story-service:8002
TTS_SERVICE_URL=http://tts-service:8003
VISION_SERVICE_URL=http://vision-service:8004

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_ENABLE_MOCK_MODE=false
